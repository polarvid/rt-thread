menu "Kernel Tracing Support"

config TRACING_KSYMTBL
bool "Enable run-time kernel symbol table"
default n

config RT_USING_TRACING
    bool "Kernel space FTrace framework"
    default n

if RT_USING_TRACING

    config TRACING_FTRACE
    bool "function tracing"
    select TRACING_KSYMTBL
    default y

    config TRACING_SYSCALL
        bool "Kernel space syscall tracing"
        default n

    if TRACING_SYSCALL
        config TRACING_SYSCALL_EXT
            bool "Embedded extra meta including parameter list"
            default n
    endif
endif

if ARCH_ARMV8
    config TRACING_SOFT_KASAN
        bool "Enable software-tagged KASAN (memory usage tracer)"
        default n
endif

endmenu
